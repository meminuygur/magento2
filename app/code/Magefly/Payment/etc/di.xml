<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Checkout\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="mageflypayment_isbank_config_provider" xsi:type="object">Magefly\Payment\Model\Ui\Isbank\ConfigProvider</item>
                <item name="mageflypayment_girogate_config_provider" xsi:type="object">Magefly\Payment\Model\Ui\Isbank\ConfigProvider</item>
            </argument>
        </arguments>
    </type>
    <!--<virtualType name="MageflyPaymentFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="string">mageflypayment</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Magento\Payment\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">MageflyPaymentValueHandlerPool</argument>
            <argument name="validatorPool" xsi:type="object">MageflyPaymentValidatorPool</argument>
            <argument name="commandPool" xsi:type="object">MageflyPaymentCommandPool</argument>
        </arguments>
    </virtualType>-->

    <virtualType name="MageflyIsbankFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">Magefly\Payment\Model\Ui\Isbank\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Magento\Payment\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">MageflyPaymentIsbankValueHandlerPool</argument>
            <!--<argument name="validatorPool" xsi:type="object">MageflyPaymentValidatorPool</argument>-->
            <argument name="commandPool" xsi:type="object">MageflyPaymentCommandPool</argument>
        </arguments>
    </virtualType>

    <virtualType name="MageflyGirogateFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">Magefly\Payment\Model\Ui\Girogate\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Magento\Payment\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">MageflyPaymentGirogateValueHandlerPool</argument>
            <!--<argument name="validatorPool" xsi:type="object">MageflyPaymentValidatorPool</argument>-->
            <argument name="commandPool" xsi:type="object">MageflyPaymentCommandPool</argument>
        </arguments>
    </virtualType>

    <virtualType name="MageflyPaymentIsbankValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">MageflyPaymentIsbankConfigValueHandler</item>
                <item name="can_void" xsi:type="string">Magefly\Payment\Gateway\Config\CanVoidHandler</item>
                <item name="can_cancel" xsi:type="string">Magefly\Payment\Gateway\Config\CanVoidHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="MageflyPaymentGirogateValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">MageflyPaymentGirogateConfigValueHandler</item>
                <item name="can_void" xsi:type="string">Magefly\Payment\Gateway\Config\CanVoidHandler</item>
                <item name="can_cancel" xsi:type="string">Magefly\Payment\Gateway\Config\CanVoidHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="MageflyPaymentIsbankConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">Magefly\Payment\Gateway\Config\Isbank\Config</argument>
        </arguments>
    </virtualType>

    <virtualType name="MageflyPaymentGirogateConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">Magefly\Payment\Gateway\Config\Girogate\Config</argument>
        </arguments>
    </virtualType>

    <type name="Magefly\Payment\Gateway\Config\Girogate\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Magefly\Payment\Model\Ui\Girogate\ConfigProvider::CODE</argument>
        </arguments>
    </type>

    <type name="Magefly\Payment\Gateway\Config\Isbank\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Magefly\Payment\Model\Ui\Isbank\ConfigProvider::CODE</argument>
        </arguments>
    </type>

    <virtualType name="MageflyPaymentValidatorPool" type="Magento\Payment\Gateway\Validator\ValidatorPool">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="country" xsi:type="string">Magento\Payment\Gateway\Validator\CountryValidator</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="MageflyPaymentCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">\Magefly\Payment\Gateway\Isbank\Command\AuthorizationCommand</item>
                <item name="sale" xsi:type="string">\Magefly\Payment\Gateway\Isbank\Command\SaleCommand</item>
            </argument>
        </arguments>
    </virtualType>

</config>
